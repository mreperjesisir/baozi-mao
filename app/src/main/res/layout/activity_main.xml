<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/button_birthday"
        android:layout_width="166dp"
        android:layout_height="158dp"

        android:background="@null"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/birthday_cake"
        app:layout_constraintBottom_toTopOf="@id/subText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/grandhotel_regular"
        android:text="Press for Cake"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/mao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/baozi_mao"
        app:layout_constraintStart_toStartOf="@+id/button_birthday"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="65dp"
        android:src="@drawable/birthday_cake"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/mao"
        app:layout_constraintEnd_toStartOf="@+id/mao" />

    <ImageView
        android:id="@+id/bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bday"
        app:layout_constraintTop_toBottomOf="@+id/mao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>